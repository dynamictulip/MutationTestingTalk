        },
        {
          "action": "openSlide",
          "path": ".demo/02-Code-Coverage/slides.md"
        }
      ],
      "notes": {
        "path": ".demo/02-Code-Coverage/notes.md"
      },
      "icons": {
        "start": "vm",
        "end": "pass-filled"
      }
    },
    {
      "title": "Code Coverage - Run tests with coverage",
      "description": "",
      "steps": [
        {
          "action": "snippet",
          "contentPath": ".demo/snippets/prep-for-code.json"
        },
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.view.testing.focus"
        }
      ],
      "notes": {
        "path": ".demo/02-Code-Coverage/notes.md"
      }
    },
    {
      "title": "Code Coverage - Add more tests to satisfy code coverage",
      "description": "",
      "steps": [
        {
          "action": "insert",
          "path": "Stuff.Tests/SuperImportantTests.cs",
          "position": 18,
          "contentPath": ".demo/02-Code-Coverage/IsLessThanFortyTwo",
          "lineInsertionDelay": 100
        }
      ],
      "notes": {
        "path": ".demo/02-Code-Coverage/notes.md"
      }
    },
    {
      "title": "Mutation - Intro to concept",
